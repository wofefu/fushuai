<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!--通过一个名字叫contextClass的全局初始化参数，来指定父Ioc容器的类型-->
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  <!--通过一个名字叫contextConfigLocation的全局初始化参数，来指定父Ioc容器读取的配置类的名字-->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>com.fushuai.config.SpringConfig</param-value>
  </context-param>
  <listener>
    <!--是一个ServletContextLinstener，会在程序启动时，创建初始化一个IoC容器：默认XmlWebApplicationContext-->
    <!--默认读取的Spring配置文件是/WEB-INF/applicationContext.xml-->
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>com.fushuai.config.SpringMvcConfig</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <!--
      url-pattern，匹配请求路径的模式(规则)
        1.路径匹配
          精确匹配
            /a
            /a/b/c...
          模糊匹配
            /*：匹配所有请求，包括jsp的请求
            /a/b/*
        2.扩展名匹配
          *.do
        3.默认匹配
          /：在没有更精确匹配的servlet的情况下，使用该servlet，不包括jsp的请求
     -->
    <url-pattern>/</url-pattern>
  </servlet-mapping>

<!--  <servlet-mapping>-->
<!--    <servlet-name>default</servlet-name>-->
<!--    <url-pattern>*.html</url-pattern>-->
<!--  </servlet-mapping>-->

</web-app>
